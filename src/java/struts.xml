<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <constant name="struts.devMode" value="true" />
    <!-- Configuration for the default package. -->
    <package name="default" extends="struts-default" namespace="/">
        <action name="registro" class="controlador.UsuarioAction" method="insertar">
            <result name="success"> registro.jsp</result>
            <result name="error"> error.jsp</result>            
        </action>
        
        
        <action name="Inicio" class="controlador.UsuarioAction" method="login">
            <result name="success">   
                index.jsp   
            </result>            
            <result name="index">   
                index.jsp   
            </result>            
            <result name="contato">   
                contact.jsp   
            </result>            
            <result name="producto">   
                product.jsp?mensaje=hola   
            </result>            
            <result name="error">index.jsp</result>
        </action> 
        
        <action name="obtener" class="controlador.Producto" method="obtenerLista">
            <result name="success">index.jsp</result>
            <result name="error"> error.jsp</result>            
        </action>  
        
    </package>
</struts>
